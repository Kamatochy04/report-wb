{
  "manifest_version": 3,
  "name": "Feedback Checker",
  "version": "1.1",
  "description": "Проверяет одобренные фидбеки, делает скриншоты и сохраняет их.",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "downloads",
    "downloads.open"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Feedback Checker"
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": ["<all_urls>"]
}
